<div class="flex justify-center items-center p-10">
  <div class="w-full lg:w-1/2 pt-10">
    <h2><%= t('devise.log_in') %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), builder: TailwindBuilder, data: { turbo: false }) do |form| %>
      <div class="relative my-8 border-b-2 focus-within:border-blue-500">
        <%= form.email_field :email, autofocus: true, autocomplete: "email", placeholder: " " %>
        <%= form.label :email %>
      </div>

      <div class="relative my-8 border-b-2 focus-within:border-blue-500">
        <%= form.password_field :password, autocomplete: "current-password", placeholder: " " %>
        <%= form.label :password %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex relative my-8 justify-start items-center">
          <%= form.check_box :remember_me %>
          <%= form.label :remember_me, class: "ml-6 text-xs", style: "top: 0px; transform: none !important;" %>
        </div>
      <% end %>

      <div class="actions">
        <%= form.submit t('devise.log_in') %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
