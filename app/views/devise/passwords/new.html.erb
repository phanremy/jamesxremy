<div class="flex justify-center items-center p-10">
  <div class="w-full lg:w-1/2 pt-10">
    <h2><%= t('devise.forgot_password') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, builder: TailwindBuilder, data: { turbo: false }) do |form| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="relative my-8 border-b-2 focus-within:border-blue-500">
        <%= form.email_field :email, autofocus: true, autocomplete: "email", placeholder: " " %>
        <%= form.label :email %>
      </div>

      <div class="actions">
        <%= form.submit t('devise.send_reset') %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
