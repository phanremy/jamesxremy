<h2>Resend confirmation instructions</h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }, builder: TailwindBuilder, data: { turbo: false }) do |form| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="relative my-8 border-b-2 focus-within:border-blue-500">
    <%= form.email_field :email, autofocus: true, autocomplete: "email", placeholder: " " %>
    <%= form.label :email %>
  </div>

  <div class="actions">
    <%= form.submit "Resend confirmation instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
