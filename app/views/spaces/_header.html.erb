<%= space.description %>
<div class="text-sm font-medium text-center text-gray-500 border-b border-gray-200 dark:text-gray-400 dark:border-gray-700 pt-5 mb-5">
  <ul class="flex flex-wrap -mb-px">
    <% %w[spaces orders items suppliers].each do |tab| %>
      <li class="me-2">
        <% link = '#' %>
        <% link = space_items_path(space_id: space.id) if tab == 'items' %>
        <% link = space_suppliers_path(space_id: space.id) if tab == 'suppliers' %>
        <% link = space_path(id: space.id) if tab == 'spaces' %>
        <% if params[:controller] == tab %>
          <%= link_to t("#{tab}.index.tab"), link, "aria-current": "page", class: "inline-block p-4 text-blue-600 border-b-2 border-blue-600 rounded-t-lg active dark:text-blue-500 dark:border-blue-500" %>
        <% else %>
          <%= link_to t("#{tab}.index.tab"), link, class: "inline-block p-4 border-b-2 border-transparent rounded-t-lg hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300" %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
