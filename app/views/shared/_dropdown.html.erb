<div data-controller="dropdown"
     data-dropdown-listen-click-value="<%= is_closing_on_click %>"
     class="relative inline-block text-left">

  <button data-action="click->dropdown#process"
          data-dropdown-target="button"
          type="button"
          class="inline-flex justify-center w-full rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-blue-500" id="menu-button" aria-expanded="true" aria-haspopup="true">
    <div class="hidden lg:block"><%= button_label_lg %></div> <div class="block lg:hidden"><%= button_label_sm %></div>
    <!-- Heroicon name: solid/chevron-down -->
    <svg class="lg:-mr-1 lg:ml-2 h-5 w-5 <%= "rotate-180" unless is_top %>" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
      <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
    </svg>
  </button>

  <div data-dropdown-target="content"
       class="z-10 origin-top-right absolute mt-2 min-w-fit w-full rounded-md
              shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none
              <%= 'hidden' unless by_default_visible %> <%= 'right-0' unless is_left %> <%= 'bottom-[45px]' unless is_top %> " role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
    <div class="py-1" role="none">
      <!-- Active: "bg-gray-100 text-gray-900", Not Active: "text-gray-700" -->
      <%= content %>
    </div>
  </div>
</div>
