<% flash.each do |type, message| %>
  <% if %w[error].include?(type) %>
    <div class="bg-red-100 border border-red-400 text-red-700 pl-2 pr-8 py-3 rounded relative mb-5" role="<%= type %>" data-controller="remove">
  <% elsif type == 'alert' %>
    <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 pl-2 pr-8 py-3 rounded relative mb-5" role="<%= type %>" data-controller="remove">
  <% elsif type == 'success' %>
    <div class="bg-green-100 border border-green-400 text-green-700 pl-2 pr-8 py-3 rounded relative mb-5" role="<%= type %>" data-controller="remove">
  <% elsif type == 'notice' %>
    <div class="bg-green-100 border border-green-400 text-green-700 pl-2 pr-8 py-3 rounded relative mb-5" role="<%= type %>" data-controller="remove">
  <% end %>
    <span class="block mr-8">
      <% if message.kind_of?(Array) %>
        <ul>
          <% message.each do |msg|%>
            <li class="pl-2"><%= msg %></li>
          <% end %>
        </ul>
      <% else %>
        <%= message %>
      <% end %>
    </span>
    <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
      <svg class="fill-current h-6 w-6 cursor-pointer" role="button" xmlns="" viewBox="0 0 20 20" data-action="click->remove#proceed">
        <title>Close</title>
        <path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/>
      </svg>
    </span>
  </div>
<% end %>
