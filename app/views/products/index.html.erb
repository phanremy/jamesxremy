<%= turbo_frame_tag :space do %>
  <%= render "spaces/header", space: @space %>

  <%= link_to t('products.new'), new_space_product_path(space_id: @space.id), class: "text-center bg-gray-200 hover:bg-gray-300 text-dark font-semibold py-2 px-4 border-transparent rounded" %>
  <br><br>
  <%= render 'products/search_and_filter', space: @space %>

  <% if @products.count.zero? %>
    <p><%= t('alert.none', class_name: t('product', scope: 'activerecord.models').pluralize.downcase) %></p>
  <% else %>
    <%== render partial: 'shared/pagy/nav', locals: { pagy: @pagy } %>
    <%= render @products, space: @space %>
    <%== render partial: 'shared/pagy/nav', locals: { pagy: @pagy } %>
  <% end %>
<% end %>
