<%= turbo_frame_tag :space do %>
  <%= render "spaces/header", space: %>
  <% if can? :manage, product %>
    <div class="flex">
      <%= link_to t('actions.edit'), edit_space_product_path(product, space_id: space.id), class: "text-blue-400 hover:text-blue-500 hover:underline" %>
       | <%= button_to t('actions.delete'), space_product_path(product, space_id: space.id), method: :delete, form: { data: { turbo_confirm: t('products.destroy_confirm') } }, class: "text-red-400 hover:text-red-500 hover:underline" %>
    </div>
  <% end %>
  <br>
  <br><%= t('description', scope: 'activerecord.attributes.product') %> : <%= product.description %>
  <br>
  <br><%= t('sales_count', scope: 'activerecord.attributes.product') %> :
  <%= turbo_frame_tag :"product_#{product.id}_sales_count" do %><%= product.sales_count %><% end %>
  <br>
  <% product.product_items.includes(:item).each_with_index do |product_item, index| %>
    <%= render 'products/item', index:, item: product_item.item, quantity: product_item.quantity %>
  <% end %>
  <br><br>
  <%#= render 'items/table', items: @items, space: product.space, pagy: @pagy %>

  <div class="flex justify-between items-center flex-wrap">
    <%= button_to t('sales.index.create'), product_sales_path(product), method: :post, class: "text-center bg-transparent hover:bg-green-500 text-green-700 font-semibold hover:text-white py-2 px-4 ml-6 border border-green-500 hover:border-transparent rounded" %>
    <%= button_to t('sales.index.destroy'), product_sales_path(product), method: :delete, class: "text-center bg-transparent hover:bg-red-500 text-red-700 font-semibold hover:text-white py-2 px-4 ml-6 border border-red-500 hover:border-transparent rounded" %>
  </div>

  <%= turbo_frame_tag :sale do %>
  <% end %>
<% end %>
