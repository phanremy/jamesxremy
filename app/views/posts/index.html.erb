<%= turbo_frame_tag :content do %>
  <% if can? :create, Post %>
    <%= link_to t('posts.new'), new_post_path, data: { turbo: false }, class: "text-center bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" %>
    <br><br>
  <% end %>
  <% if @posts.count.zero? %>
    <p><%= t('alert.none', class_name: t('post', scope: 'activerecord.models').pluralize.downcase) %></p>
  <% else %>
    <%== render partial: 'shared/pagy/nav', locals: { pagy: @pagy } %>
    <%= render @posts %>
    <%== render partial: 'shared/pagy/nav', locals: { pagy: @pagy } %>
  <% end %>
<% end %>
