<%= turbo_frame_tag :space do %>
  <%= render "spaces/header", space: @space %>

  <%= link_to t('items.new'), new_space_item_path(space_id: @space.id), class: "text-center bg-gray-200 hover:bg-gray-300 text-dark font-semibold py-2 px-4 border-transparent rounded" %>
  <br><br>
  <%= render 'items/search_and_filter', space: @space %>

  <%= render 'items/table', items: @items, space: @space, pagy: @pagy %>
<% end %>
