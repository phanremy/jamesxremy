<%= turbo_frame_tag :space do %>
  <%= render "spaces/header", space: @space %>

  <%= link_to t('items.new'), new_space_item_path(space_id: @space.id), class: "text-center bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" %>
  <br><br>
  <%= render 'items/search_and_filter', space: @space %>

  <%= render 'items/table', items: @items, space: @space, pagy: @pagy %>
<% end %>
